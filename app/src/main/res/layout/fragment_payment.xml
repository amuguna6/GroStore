<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_placeholder_select" />

                    <com.angela.grostore.customfonts.MyTextView                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_credit_card" />

                    <com.angela.grostore.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/payment"
                        android:textColor="@color/Tex"

                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_confirm_unselect" />

                    <com.angela.grostore.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/confirm"
                        android:textColor="@color/subtext"
                        android:textSize="14dp" />
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

        <RadioGroup
            android:id="@+id/payment_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/card_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:checked="true"
                android:text="@string/card_payment" />

            <RadioButton
                android:id="@+id/cash_on_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/cah_on_delivery" />

        </RadioGroup>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:id="@+id/card_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">


                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <com.angela.grostore.customfonts.MyTextView                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="@string/saved_cards"
                            android:textColor="@color/lightgrey"
                            android:textSize="@dimen/text" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">


                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:backgroundTint="@color/lightgrey" />

                            <com.angela.grostore.customfonts.MyTextView                             android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:text="@string/_4543_34_3376" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_ccv"
                                android:padding="5dp">

                                <com.angela.grostore.customfonts.MyEditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#00000000"
                                    android:hint="@string/ccv"
                                    android:inputType="number"
                                    android:maxLength="3"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:textColor="@color/text"
                                    android:textColorHint="@color/lightgrey"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1.9"
                                android:gravity="right">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/visa"

                                    />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp" />

                            <com.angela.grostore.customfonts.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"

                                android:text="@string/_3376_34_4333" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_ccv"
                                android:padding="5dp">

                                <com.angela.grostore.customfonts.MyEditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#00000000"
                                    android:hint="@string/ccv"
                                    android:inputType="number"
                                    android:maxLength="3"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:textColor="@color/text"
                                    android:textColorHint="@color/lightgrey"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="16dp"
                                android:layout_weight="1.9"
                                android:gravity="right">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="22dp"
                                    android:contentDescription="@string/todo"
                                    android:layout_gravity="center"
                                    android:src="@drawable/master" />
                            </LinearLayout>


                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="135dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="135dp"
                            android:background="@color/lightgrey">

                        </View>


                        <com.angela.grostore.customfonts.MyTextView                          android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="@string/new_cards"
                            android:textColor="@color/lightgrey"
                            android:textSize="@dimen/text" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/bg_ccv"
                            android:orientation="horizontal"
                            android:padding="13dp">


                            <com.angela.grostore.customfonts.MyEditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="#00000000"
                                android:focusable="true"
                                android:hint="@string/card_number"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="20"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/text"
                                android:textColorHint="@color/lightgrey"
                                android:textSize="@dimen/text" />


                            <!--********you have to code at java side to detect perticular card (visa, mastercard or else)********-->

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:src="@drawable/master" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/bg_ccv"
                            android:orientation="horizontal"
                            android:padding="14dp">


                            <com.angela.grostore.customfonts.MyEditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="#00000000"
                                android:focusable="true"
                                android:hint="@string/name_on_card"
                                android:lines="1"
                                android:maxLength="25"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/text"
                                android:textColorHint="@color/lightgrey"
                                android:textSize="@dimen/text" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_ccv"
                                android:orientation="horizontal"
                                android:padding="14dp">


                                <com.angela.grostore.customfonts.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingRight="6dp"
                                    android:text="@string/expires_on"
                                    android:textColor="@color/lightgrey"
                                    android:textSize="@dimen/sub_text" />

                                <com.angela.grostore.customfonts.MyEditText
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#00000000"
                                    android:lines="1"
                                    android:maxLength="5"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:textColor="@color/text"
                                    android:textColorHint="@color/text"
                                    android:textSize="@dimen/text" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_ccv"
                                android:orientation="horizontal"
                                android:padding="14dp">


                                <com.angela.grostore.customfonts.MyTextView                                   android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:paddingRight="6dp"
                                    android:text="@string/ccv"
                                    android:textColor="@color/lightgrey"
                                    android:textSize="@dimen/sub_text" />

                                <com.angela.grostore.customfonts.MyEditText                               android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#00000000"
                                    android:inputType="number"
                                    android:lines="1"
                                    android:maxLength="3"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:textColor="@color/text"
                                    android:textColorHint="@color/text"
                                    android:textSize="@dimen/text" />


                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/pay_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="41dp"
                            android:background="@drawable/bg_pay"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="14dp">


                            <com.angela.grostore.customfonts.MyTextView                             android:id="@+id/total_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:text="@string/confirm_and_pay_rs"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text" />
                        </LinearLayout>


                    </LinearLayout>

                </FrameLayout>

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>